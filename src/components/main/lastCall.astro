---
import { Image } from "astro:assets";
import Flower from "../../assets/flower.svg";
---

<section
 class="mt-60 m-auto flex flex-col justify-center items-center relative w-full"
>
 <div class="relative w-full color-[#fecada] lg:break-keep">
  <div
   class="text-center text-7 w-fit text-shadow-[0_0_5px_#fecada] items-center flex m-auto"
  >
   <span
    class="relative w-fit flex flex-col lg:flex-row items-center lg:-ml-3cm"
   >
    One&nbsp;click&nbsp;away from&nbsp;meeting&nbsp;someone who&nbsp;loves&nbsp;
    <div
     class="w-50% absolute w-fit self-center flex flex-col justify-center items-center lg:w-0 top-full lg:left-full lg:top-0 lg:items-start"
    >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_-15s]"
      >gacha&nbsp;games</span
     >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_-12.5s]"
      >art</span
     >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_-10s]"
      >loafing</span
     >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_-7.5s]"
      >gaming</span
     >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_-5s]"
      >music</span
     >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_-2.5s]"
      >photography</span
     >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_0s]"
      >lofi</span
     >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_2.5s]"
      >minecraft</span
     >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_5s]"
      >chatting</span
     >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_7.5s]"
      >anime</span
     >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_10s]"
      >painting</span
     >
     <span
      class="absolute top-0 op-0 of-hidden animate-[topToBottom_30s_linear_infinite_12.5s]"
      >genshin</span
     >
    </div>
   </span>
  </div>
 </div>

 <a
  target="_blank"
  href="https://discord.gg/TNSYnuFy"
  class="text-6 z-100 inline-flex relative flex items-center justify-center hover:scale-105 transition-all duration-300 ease-in-out mt-20 lg:mt-10 mb-15
  after:content-empty after:h-full after:w-full after:rounded-full after:absolute after:bottom-0 after:z-99 after:animate-[gradient_8s_linear_infinite] after:filter-blur-1.5rem after:[background-image:conic-gradient(from_var(--angle),#ff2190,#fca4e5,#ffc2fb,#7aedff,#544aff,#ff2190)]"
  style="--angle: 0deg;"
 >
  <div
   class="z-100 absolute top-0 left-0 w-full h-full
  after:content-empty after:h-full after:w-full after:rounded-full after:absolute after:bottom-0 after:z-99 after:animate-[gradient_8s_linear_infinite] after:[background-image:conic-gradient(from_var(--angle),#ff2190,#fca4e5,#ffc2fb,#7aedff,#544aff,#544aff,#ff2190)]"
   style="--angle: 0deg;"
  >
  </div>
  <span
   class="inline-flex h-full w-full cursor-pointer items-center justify-center bg-[#18181b] backdrop-blur-3xl px-4 color-white z-100 m-2px rounded-full"
  >
   <span
    class="bg-gradient-to-r via-white from-[#fecada] to-[#fecada] bg-[length:200%] bg-repeat-x m-auto p-1 text-fill-color hover:bg-[position:100%_center] transition-all duration-300 ease-in-out bg-clip-text text-fill-color relative
before:bg-gradient-to-r before:via-white before:from-[#fecada] before:to-[#fecada] before:bg-[length:200%] before:bg-repeat-x before:m-auto before:text-fill-color before:hover:bg-[position:100%_center] before:transition-all before:duration-300 before:ease-in-out before:bg-clip-text before:text-fill-color before:content-['Join_us'] before:absolute before:blur-5px"
   >
    Join us
   </span>
  </span>
 </a>

 <Image
  src={Flower}
  alt=""
  width="4096"
  height="4096"
  loading="eager"
  class="color-[#fecada] animate-[flower-rotate_160s_linear_infinite] absolute w-20 h-auto -top-2cm right-[calc(50%-2cm)] rotate-30deg blur-10px"
 />
 <Image
  src={Flower}
  alt=""
  width="4096"
  height="4096"
  loading="eager"
  class="color-[#fecada] animate-[flower-rotate_160s_linear_infinite] absolute w-20 h-auto -top-2cm right-[calc(50%-2cm)] rotate-30deg"
 />
 <Image
  src={Flower}
  alt=""
  width="4096"
  height="4096"
  loading="eager"
  class="color-[#fecada] animate-[flower-rotate_200s_linear_infinite_reverse] absolute w-20 h-auto bottom-1cm right-[calc(50%+4cm)] rotate-20deg blur-10px"
 />
 <Image
  src={Flower}
  alt=""
  width="4096"
  height="4096"
  loading="eager"
  class="color-[#fecada] animate-[flower-rotate_200s_linear_infinite_reverse] absolute w-20 h-auto bottom-1cm right-[calc(50%+4cm)] rotate-20deg"
 />
 <Image
  src={Flower}
  alt=""
  width="4096"
  height="4096"
  loading="eager"
  class="color-[#fecada] animate-[flower-rotate_240s_linear_infinite] absolute w-13 h-auto right-[calc(50%+11cm)] bottom-35 rotate-15deg blur-10px hidden lg:block"
 />
 <Image
  src={Flower}
  alt=""
  width="4096"
  height="4096"
  loading="eager"
  class="color-[#fecada] animate-[flower-rotate_240s_linear_infinite] absolute w-13 h-auto right-[calc(50%+11cm)] bottom-35 rotate-15deg hidden lg:block"
 />
 <Image
  src={Flower}
  alt=""
  width="4096"
  height="4096"
  loading="eager"
  class="color-[#fecada] animate-[flower-rotate_180s_linear_infinite_reverse] absolute w-13 h-auto bottom-5 right-[calc(50%-4cm)] rotate-10deg blur-10px"
 />
 <Image
  src={Flower}
  alt=""
  width="4096"
  height="4096"
  loading="eager"
  class="color-[#fecada] animate-[flower-rotate_180s_linear_infinite_reverse] absolute w-13 h-auto bottom-5 right-[calc(50%-4cm)] rotate-10deg"
 />
</section>

<style>
 @keyframes topToBottom {
  40% {
   transform: translateY(-40px);
   text-shadow: 0 0 0px #fecada;
  }
  45% {
   transform: translateY(-40px);
   opacity: 0;
  }
  47% {
   opacity: 1;
   transform: translateY(0px);
   text-shadow: 0 0 5px #fecada;
  }
  53.3% {
   opacity: 1;
   transform: translateY(0px);
   text-shadow: 0 0 5px #fecada;
  }
  55.3% {
   opacity: 0;
   transform: translateY(40px);
  }
  60.3% {
   transform: translateY(40px);
   text-shadow: 0 0 0px #fecada;
  }
 }
</style>

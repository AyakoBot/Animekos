 <style>
  :root {
   --slide-width: 300px;
   --slide-count: 10;
  }

  @media (min-width: 768px) {
   :root {
    --slide-width: 500px;
   }
  }

  @keyframes scroll {
   0% {
    transform: translateX(0);
   }
   100% {
    transform: translateX(
     calc(calc(var(--slide-width) * -1) * (var(--slide-count) / 2))
    );
   }
  }
 </style>
</section>

---
import Card from "../card.astro";
---

<section class="mx-0 color-[#fecada]">
 <div
  class="flex w-full m-auto of-hidden relative h-200px md:h-unset
    after:content-empty after:h-300px after:absolute after:w-200px after:z-2 after:right-0 after:top-0 after:rotate-z-180deg after:w-full after:bg-[linear-gradient(90deg,rgba(24,24,27,1)_0%,rgba(20,20,54,0)_14%,rgba(23,23,31,0)_86%,rgba(24,24,27,1)_100%)]
